generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model user {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  password  String
  firstname String
  lastname  String
  todos Todo[]
}

model Todo {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  done        Boolean
  user_id     Int
  user        user    @relation(fields: [user_id], references: [id])
}

